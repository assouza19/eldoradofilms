<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/iconGenres"
        android:layout_width="69dp"
        android:layout_height="95dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/bg_menu_home"
        android:padding="@dimen/margin_24dp"
        android:src="@drawable/icon_genres"/>

    <TextView
        android:id="@+id/textGenres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/genres"
        android:textColor="@color/white"
        android:textSize="@dimen/text_10sp"
        android:layout_marginBottom="@dimen/margin_12dp"
        app:layout_constraintBottom_toBottomOf="@id/iconGenres"
        app:layout_constraintEnd_toEndOf="@id/iconGenres"
        app:layout_constraintStart_toStartOf="@id/iconGenres"
        app:layout_constraintTop_toTopOf="@id/iconGenres"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/iconTv"
        android:layout_width="69dp"
        android:layout_height="95dp"
        app:layout_constraintStart_toEndOf="@id/iconGenres"
        app:layout_constraintEnd_toStartOf="@id/iconMovies"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/bg_menu_home"
        android:padding="@dimen/margin_24dp"
        android:src="@drawable/icon_tv"/>

    <TextView
        android:id="@+id/textTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_series_title"
        android:textColor="@color/white"
        android:textSize="@dimen/text_10sp"
        android:layout_marginBottom="@dimen/margin_12dp"
        app:layout_constraintBottom_toBottomOf="@id/iconTv"
        app:layout_constraintEnd_toEndOf="@id/iconTv"
        app:layout_constraintStart_toStartOf="@id/iconTv"
        app:layout_constraintTop_toTopOf="@id/iconTv"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/iconMovies"
        android:layout_width="69dp"
        android:layout_height="95dp"
        app:layout_constraintStart_toEndOf="@id/iconTv"
        app:layout_constraintEnd_toStartOf="@id/iconCinema"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/bg_menu_home"
        android:padding="@dimen/margin_24dp"
        android:src="@drawable/icon_heart"/>

    <TextView
        android:id="@+id/textMovies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/movies_title"
        android:textColor="@color/white"
        android:textSize="@dimen/text_10sp"
        android:layout_marginBottom="@dimen/margin_12dp"
        app:layout_constraintBottom_toBottomOf="@id/iconMovies"
        app:layout_constraintEnd_toEndOf="@id/iconMovies"
        app:layout_constraintStart_toStartOf="@id/iconMovies"
        app:layout_constraintTop_toTopOf="@id/iconMovies"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/iconCinema"
        android:layout_width="69dp"
        android:layout_height="95dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/bg_menu_home"
        android:padding="@dimen/margin_24dp"
        android:src="@drawable/icon_cinema"/>

    <TextView
        android:id="@+id/textCinema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/in_theatre_title"
        android:textColor="@color/white"
        android:textSize="@dimen/text_10sp"
        android:layout_marginBottom="@dimen/margin_12dp"
        app:layout_constraintBottom_toBottomOf="@id/iconCinema"
        app:layout_constraintEnd_toEndOf="@id/iconCinema"
        app:layout_constraintStart_toStartOf="@id/iconCinema"
        app:layout_constraintTop_toTopOf="@id/iconCinema"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>